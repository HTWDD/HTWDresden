                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10sp"
                        android:text="@string/management_opening_hours" />

                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TableRow>

                            <TextView
                                style="@android:style/TextAppearance.DeviceDefault.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingEnd="5sp"
                                android:paddingStart="10sp"
                                android:text="@string/management_services_office_services1" />

                            <TextView
                                style="@android:style/TextAppearance.DeviceDefault.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingEnd="5sp"
                                android:paddingStart="10sp"
                                android:text="@string/management_services_office_services2" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                style="@android:style/TextAppearance.DeviceDefault.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingEnd="5sp"
                                android:paddingStart="10sp"
                                android:text="@string/management_services_office_services3" />

                            <TextView
                                style="@android:style/TextAppearance.DeviceDefault.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingEnd="5sp"
                                android:paddingStart="10sp"
                                android:text="@string/management_services_office_services4" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
