            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/management_examination_office"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_between_content"
