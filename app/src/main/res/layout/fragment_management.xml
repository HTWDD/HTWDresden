    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/swipeRefr_SemPlan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ManagementFragment">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1">
            <android.support.v7.widget.CardView
                android:id="@+id/management_semesterplan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_between_content"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/space_between_content"
                android:clickable="true"
                card_view:cardCornerRadius="4dp">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                        android:text="WINTER/SOMMERSEMESTER"
                        android:id="@+id/semesterplan_Bezeichnung" />
                    <TextView
                        android:paddingTop="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                        android:text="Lehrveranstaltungen" />
                    <TextView
                        android:paddingStart="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                        android:text="von-bis"
                        android:id="@+id/semesterplan_lecturePeriod" />
                    <TextView
                        android:paddingTop="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                        android:text="Freie Tage" />
                    <TextView
                        android:paddingStart="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                        android:text="Tag 1 ...\nTag 2\nTag 3"
                        android:id="@+id/semesterplan_freieTage" />
                    <TextView
                        android:paddingTop="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                        android:text="Prüfungsabschnitt" />
                    <TextView
                        android:paddingStart="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                        android:text="von-bis"
                        android:id="@+id/semesterplan_pruefPeriod" />
                    <TextView
                        android:paddingTop="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                        android:text="Rückmeldung" />
                    <TextView
                        android:paddingStart="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                        android:text="von-bis"
                        android:id="@+id/semesterplan_reregistration" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/management_office"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
