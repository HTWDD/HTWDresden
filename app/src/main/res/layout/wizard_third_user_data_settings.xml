<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:theme="@style/Wizard"
    android:paddingLeft="60dp"
    android:paddingRight="60dp"
    android:gravity="center_vertical">

<android.support.v7.widget.CardView
    app:cardCornerRadius="4dp"
    android:elevation="4dp"
    android:layout_margin="4dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
    android:adjustViewBounds="true"
    android:scaleType="centerCrop"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/studkart5"/>
</android.support.v7.widget.CardView>


    <android.support.design.widget.TextInputLayout

        android:paddingTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/pref_snummer"
        android:nextFocusForward="@+id/pref_Stg">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/pref_snummer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/settings_bibNummer"
            android:inputType="number"
            android:maxLength="5"
            android:nextFocusDown="@+id/pref_Stg"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/pref_snummer"
        android:nextFocusForward="@+id/pref_Stg">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/pref_rzlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/settings_rzLogin"
            android:inputType="textPassword"
            android:nextFocusDown="@+id/pref_Stg"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>



</LinearLayout>