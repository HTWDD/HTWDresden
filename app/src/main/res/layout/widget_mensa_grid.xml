                android:textSize="12sp" />

            <TextView
                android:id="@+id/widget_mensa_item_meal_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingEnd="0dp"
                android:paddingStart="@dimen/widget_space_between_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_mensa_item_price_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/htw_orange"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/widget_mensa_item_price_4"
